<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Rolling File Appender for transaction logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>transactions/logs.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>transactions/application-%d{yyyy-MM-dd}.log</fileNamePattern> <!-- Log file rotation -->
            <maxHistory>30</maxHistory> <!-- Keep logs for 30 days -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender for logs -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger settings for general logging at INFO level -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Logger for package com.azkivam.bankingsystem.domain.log with all log levels -->
    <logger name="com.azkivam.bankingsystem.domain.log" level="trace">
        <appender-ref ref="FILE"/>
    </logger>

</configuration>
